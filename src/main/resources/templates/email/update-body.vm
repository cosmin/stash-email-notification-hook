    border: none 0;
    border-top: 2px dashed #fa0;
    height: 1px;
}

#header, #footer {
    color: #fff;
    background: #636;
    border: 1px #300 solid;
    padding: 6px;
}

#patch {
    width: 100%;
}

#patch h4 {
    font-family: verdana, arial, helvetica, sans-serif;
    font-size: 10pt;
    padding: 8px;
    background: #369;
    color: #fff;
    margin: 0;
}

#patch .propset h4, #patch .binary h4 {
    margin: 0;
}

#patch pre {
    padding: 0;
    line-height: 1.2em;
    margin: 0;
}

#patch .diff {
    width: 100%;
    background: #eee;
    padding: 0 0 10px 0;
    overflow: auto;
}

#patch .propset .diff, #patch .binary .diff {
    padding: 10px 0;
}

#patch span {
    display: block;
    padding: 0 10px;
}

#patch .modfile, #patch .addfile, #patch .delfile, #patch .propset, #patch .binary, #patch .copfile {
    border: 1px solid #ccc;
    margin: 10px 0;
}

#patch ins {
    background: #dfd;
    text-decoration: none;
    display: block;
    padding: 0 10px;
}

#patch del {
    background: #fdd;
    text-decoration: none;
    display: block;
    padding: 0 10px;
}

#patch .lines, .info {
    color: #888;
    background: #fff;
}

-->
</style>
<div id="msg">
    <div id="header">Automated Stash commit notification - please DO NOT REPLY</div>

    <h3>Commits</h3>
    #foreach( $commit in $changesets )
        <dl class="meta">
            <dt>Revision</dt><dd>$commit.displayId</dd>
            <dt>Author Name</dt><dd>$commit.author.name</dd>
            <dt>Author Email</dt><dd>$commit.author.emailAddress</dd>
            <dt>Date</dt><dd>$commit.authorTimestamp</dd>
            #if(!$settings.sendCommitMessages())
            <dt>Message</dt><dd>$commit.message.split("\n").get(0)</dd>
            #end
        </dl>
        #if($settings.sendCommitMessages())
            <pre>$commit.message</pre>
        #end
    #end

    #if($settings.sendChangedFiled())
    <h3>Modified Paths</h3>
    <ul>
        #foreach($filename in $filenames)
            <li><a href='#${filename.replace("/", "")}'>$filename</a></li>
        #end
    </ul>
    #end
</div>
#if($settings.sendFullDiffs())
<div id="patch">
    <h3>Diff</h3>

    $diffContentWithHtml
</div>
#end
</body>
</html>
